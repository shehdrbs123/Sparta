<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <BaseOutputPath>.\</BaseOutputPath>
        <RootNamespace>PersonalProject_스파르타던전</RootNamespace>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <OutputPath>bin\</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <OutputPath>bin\Debug\</OutputPath>
    </PropertyGroup>

    <ItemGroup>
      <Compile Remove="net7.0\**" />
      <Compile Include="src\DataClass\IItem.cs" />
      <Compile Include="src\DataClass\Status.cs" />
      <Compile Include="src\Environment\Data\ResourceManager.cs" />
      <Compile Include="src\Environment\FunctionReader.cs" />
      <EmbeddedResource Remove="net7.0\**" />
      <None Remove="net7.0\**" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Resource\" />
    </ItemGroup>

    <ItemGroup>
      <None Update="Data\String\StringData_KR.txt">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Content Include="Data\VilliageData_KR.txt">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
